<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <!--<environmentMode>FAST_ASSERT</environmentMode>-->

    <!-- Domain model configuration -->
    <solutionClass>org.ovirt.optimizer.service.problemspace.OptimalDistributionSolution</solutionClass>
    <planningEntityClass>org.ovirt.optimizer.service.problemspace.VmAssignment</planningEntityClass>

    <!-- Score configuration -->
    <scoreDirectorFactory>
        <scoreDefinitionType>HARD_SOFT</scoreDefinitionType>
        <scoreDrl>/org/ovirt/optimizer/service/rules/default.drl</scoreDrl>
    </scoreDirectorFactory>

    <!-- Optimization algorithms configuration
    <termination>
        <maximumSecondsSpend>300</maximumSecondsSpend>
    </termination> -->

    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT</constructionHeuristicType>
    </constructionHeuristic>

    <localSearch>
        <acceptor>
            <entityTabuSize>7</entityTabuSize>
        </acceptor>

        <forager>
            <acceptedCountLimit>1000</acceptedCountLimit>
        </forager>

        <!-- Workaround for https://issues.jboss.org/browse/PLANNER-235 -->
        <unionMoveSelector>
            <changeMoveSelector>
                <fixedProbabilityWeight>100000.0</fixedProbabilityWeight>
            </changeMoveSelector>
            <swapMoveSelector>
                <fixedProbabilityWeight>100000.0</fixedProbabilityWeight>
            </swapMoveSelector>
            <moveListFactory>
                <moveListFactoryClass>org.ovirt.optimizer.service.problemspace.DummyMoveListFactory</moveListFactoryClass>
                <fixedProbabilityWeight>1.0</fixedProbabilityWeight>
            </moveListFactory>
        </unionMoveSelector>
    </localSearch>
</solver>